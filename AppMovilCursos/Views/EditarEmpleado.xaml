                        <Button Text="Cambiar Foto" Style="{StaticResource DisableBtn}" IsEnabled="False" FontAttributes="Bold" x:Name="ImgEmpleadoUpdate" TextColor="#fff" HeightRequest="40" BackgroundColor="Transparent" BorderColor="#999" BorderWidth="2" Clicked="AddImg_Clicked" />
                    </StackLayout>


                    <StackLayout IsVisible="true" Orientation="Horizontal" VerticalOptions="EndAndExpand" HorizontalOptions="End" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" BackgroundColor="Transparent">
                        <Label Text="Editar Empleado" VerticalTextAlignment="Center" IsVisible="true" FontAttributes="Bold" TextColor="#fff" />
