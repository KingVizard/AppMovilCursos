            <StackLayout Padding="20, 10">

                
                <Entry Keyboard="Chat" x:Name="txtIdEmp" IsVisible="False"/>

                <Label Text="Nombre:" FontAttributes="Bold"/>
                <controls:CustomEntry Keyboard="Chat" x:Name="txtNombre" IsEnabled="False"/>
                <Label Text="Dirección:" FontAttributes="Bold" />
                <controls:CustomEntry Keyboard="Chat" x:Name="txtDireccion" IsEnabled="False"/>
                <Label Text="Teléfono:" FontAttributes="Bold"/>
                <controls:CustomEntry Keyboard="Telephone" x:Name="txtTelefono" IsEnabled="False" MaxLength="10"/>
                <Label Text="Edad:" FontAttributes="Bold"/>
                <controls:CustomEntry Keyboard="Numeric" x:Name="txtEdad" IsEnabled="False" MaxLength="2"/>
                <Label Text="Curp:" FontAttributes="Bold"/>
                <controls:CustomEntry Keyboard="Chat" x:Name="txtCurp" TextTransform="Uppercase" IsEnabled="False"/>

                <Label Text="Tipo de Empleado:" FontAttributes="Bold" />
              <!--  <Entry Keyboard="Chat" x:Name="txtTipoEmpleado"/> -->
                <controls:CustomPk Title="Selecciona una opción" ItemsSource="{Binding TipoEmps}" ItemDisplayBinding="{Binding Tipo}" SelectedItem="{Binding SelectedTipo}" x:Name="UserPickerEmpleado" SelectedIndexChanged="UserPickerEmpleado_SelectedIndexChanged" IsEnabled="False">
                    
                </controls:CustomPk>

                <StackLayout>
                    <Button Text="Guardar Cambios" FontAttributes="Bold" TextColor="#fff" x:Name="btnEditar" IsVisible="false" Clicked="btnEditar_Clicked" BackgroundColor="DeepSkyBlue" CornerRadius="15" Margin="0,5,0,0"/>
                    <Button Text="Eliminar Empleado" FontAttributes="Bold" TextColor="#fff" x:Name="btnEliminar" Clicked="btnEliminar_Clicked" BackgroundColor="DeepPink" CornerRadius="15" Margin="0,5,0,0"/>
