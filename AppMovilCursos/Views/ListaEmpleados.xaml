<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovilCursos.Views.ListaEmpleados"
             Background="DeepSkyBlue">
    <ContentPage.Content>
        <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"  >
            <StackLayout  AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="Transparent">
                <StackLayout BackgroundColor="Transparent" Padding="0" Margin="0" Spacing="0" >
                    <Label Text="Lista de Empleados" TextColor="#fff" BackgroundColor="Transparent" AbsoluteLayout.LayoutFlags="All" FontSize="25" Padding="8" HorizontalTextAlignment="Center"  FontAttributes="Bold" />
                    <Frame CornerRadius="10" Padding="5" HasShadow="False" BackgroundColor="Snow" Margin="0">
                        <ListView x:Name="lsEmpleados" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" Margin="0" BackgroundColor="Transparent"
                        AbsoluteLayout.LayoutBounds="0,0,1,1"
                          AbsoluteLayout.LayoutFlags="All"
                                  ItemTapped="lsEmpleados_ItemTapped">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Grid Padding="6">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Text="{Binding IdEmp}"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                                   x:Name="txtIdEmp"/>
                                            <Label Text="{Binding Nombre}"
                                       Grid.Row="0"
                                       Grid.Column="1" />
                                            <Label Text="{Binding Direccion}"
                                       Grid.Row="0"
                                       Grid.Column="2" />
                                            <Label Text="{Binding Telefono}"
                                       Grid.Row="0"
                                       Grid.Column="3" />
                                            <Label Text="{Binding Edad}"
                                       Grid.Row="0"
                                       Grid.Column="4" />
                                            
                                         <!--   <Label Text="{Binding Curp}"
                                       Grid.Row="0"
                                       Grid.Column="5" /> -->
                                            <Image Source="edit.png"
                                                   
                                       Grid.Row="0"
                                       Grid.Column="5" Aspect="AspectFit" WidthRequest="200" HeightRequest="30" VerticalOptions="Start" HorizontalOptions="CenterAndExpand">
                                                <Image.GestureRecognizers>
                                                    <TapGestureRecognizer x:Name="EditTap"
                                                      Tapped="EditTap_Tapped"   
                                                      CommandParameter="{Binding IdEmp}" />
                                                </Image.GestureRecognizers>
                                            </Image>
                                            <!--
                                            <Frame CornerRadius="10"
                           Background="blue"  VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                                                <Image BackgroundColor="red" Grid.Row="0"
                                       Grid.Column="5"
                               Source="avatar" >
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer x:Name="EditTap"
                                                      Tapped="EditTap_Tapped"
                                                      CommandParameter="{Binding Id}" />
                                                    </Image.GestureRecognizers>
                                                </Image>
                                            </Frame>
                                            -->

                                            <!--    <Label Text="{Binding TipoEmpleado}"
                                       Grid.Row="0"
                                       Grid.Column="6" />
                                             -->
                                            <Frame CornerRadius="10"
                           Background="Transparent"
                                                  Grid.Row="0"
                                       Grid.Column="6" >
                                                <Image BackgroundColor="Transparent"
                                     Source="delete.png"
                                     HeightRequest="80">
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer x:Name="DeleteTap"
                                                      Tapped="DeleteTap_Tapped"
                                                      CommandParameter="{Binding Id}" />
                                                    </Image.GestureRecognizers>
                                                </Image>
                                            </Frame>
                                        </Grid>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Frame>
                </StackLayout>
            </StackLayout>
            <ImageButton Source="IconPlus.ico" CornerRadius="50" HeightRequest="50" WidthRequest="50" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand" Margin="25" x:Name="btnRegistrarEmpleado" Clicked="btnRegistrarEmpleado_Clicked"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>