<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovilCursos.Views.ListaEmpleados"
             NavigationPage.HasNavigationBar="False"
             Background="#0095d4">
    <ContentPage.Content>
        <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"  >
            <StackLayout  AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="Transparent">
                <StackLayout BackgroundColor="Transparent" Padding="0" Margin="0" Spacing="0" >
                    <Label Text="Lista de Empleados" TextColor="#fff" BackgroundColor="DeepSkyBlue" AbsoluteLayout.LayoutFlags="All" FontSize="25" Padding="8" HorizontalTextAlignment="Center"  FontAttributes="Bold" />
                    <!--
                    <SearchBar Placeholder="Ingrese un nombre" x:Name="txtSearchEmpleado"></SearchBar>
                    -->

                    <Frame BackgroundColor="Transparent" CornerRadius="10" Margin="10" Padding="0">
                        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                            <Frame CornerRadius="10" Margin="0" Padding="0">
                                <SearchBar Placeholder="Buscar Empleado" BackgroundColor="Snow"
                                   Keyboard="Chat"
                                   x:Name="TxtSearch"
                                   TextChanged="TxtSearch_TextChanged"/>
                            </Frame>


                            <Frame HasShadow="False" BackgroundColor="#fff" Padding="2">
                                
                                

                                <ListView x:Name="lsEmpleados" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" Margin="0" BackgroundColor="Transparent" 
                                AbsoluteLayout.LayoutBounds="0,0,1,1"
                                  AbsoluteLayout.LayoutFlags="All"
                                          ItemTapped="lsEmpleados_ItemTapped">
                                    
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>

                                                <Grid Padding="6" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>



                                                    <Label Text="{Binding Nombre}"
                                               Grid.Row="0"
                                               Grid.Column="0" VerticalOptions="Center" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" HeightRequest="100" Margin="10,0,0,0" />

                                                </Grid>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Frame>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </StackLayout>


            <ImageButton Source="IconPlus.ico" BackgroundColor="#fff" CornerRadius="100" HeightRequest="60" WidthRequest="60" Padding="2" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand" Margin="25" x:Name="btnRegistrarEmpleado" Clicked="btnRegistrarEmpleado_Clicked"/>
        </AbsoluteLayout>
