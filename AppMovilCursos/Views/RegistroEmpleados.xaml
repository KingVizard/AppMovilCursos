            <StackLayout Margin="20,10">
                <Label Text="Nombre:" FontAttributes="Bold" />
                <controls:CustomEntry Keyboard="Chat" x:Name="txtNombre"/>
                <Label Text="Dirección:" FontAttributes="Bold"/>
                <controls:CustomEntry Keyboard="Chat" x:Name="txtDireccion"/>
                <Label Text="Teléfono:" FontAttributes="Bold"/>
                <controls:CustomEntry Keyboard="Telephone" x:Name="txtTelefono" MaxLength="10"/>
                <Label Text="Edad:" FontAttributes="Bold"/>
                <controls:CustomEntry Keyboard="Numeric" x:Name="txtEdad" MaxLength="2"/>
                <Label Text="Curp:" FontAttributes="Bold"/>
                <controls:CustomEntry Keyboard="Chat" x:Name="txtCurp" TextTransform="Uppercase" MaxLength="18" />

                <Label Text="Tipo de Empleado:" FontAttributes="Bold" />
                <controls:CustomPk ItemsSource="{Binding TipoEmps}" ItemDisplayBinding="{Binding Tipo}" SelectedItem="{Binding SelectedTipo}" x:Name="UserPickerEmpleado"></controls:CustomPk>

                <Button Text="Registrar" Margin="0,10,0,0" x:Name="btnRegistrar" Clicked="btnRegistrar_Clicked" BackgroundColor="DarkViolet"
                                CornerRadius="10"
                                TextColor="#fff"
                                FontSize="18"
                                FontAttributes="Bold"/>
            </StackLayout>
            
        </StackLayout>

    </ContentPage.Content>
</ContentPage>