<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovilCursos.Views.RegistroEmpleados"
             Title="Registro de Empleados">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre:" />
            <Entry Keyboard="Chat" x:Name="txtNombre"/>
            <Label Text="Dirección:" />
            <Entry Keyboard="Chat" x:Name="txtDireccion"/>
            <Label Text="Teléfono:" />
            <Entry Keyboard="Telephone" x:Name="txtTelefono"/>
            <Label Text="Edad:" />
            <Entry Keyboard="Numeric" x:Name="txtEdad"/>
            <Label Text="Curp:" />
            <Entry Keyboard="Chat" x:Name="txtCurp"/>
            
            <Label Text="TipoEmpleado:" />
            <Entry Keyboard="Numeric" x:Name="txtTipoEmpleado"/>
            <Picker Title="Tipo de empleado" />

            <Button Text="Registrar" x:Name="btnRegistrar" Clicked="btnRegistrar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>