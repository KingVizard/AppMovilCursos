<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovilCursos.Views.RegistroEmpleados"
             xmlns:controls="clr-namespace:AppMovilCursos.Resource.Class"
             NavigationPage.HasNavigationBar="False"
             Title="Registro de Empleados">
    <ContentPage.Content>

        <StackLayout Background="snow">

            <StackLayout BackgroundColor="DarkViolet" Margin="0" Padding="10">

                <AbsoluteLayout HeightRequest="220" BackgroundColor="Transparent" >

                    <ImageButton x:Name="ImgEmpleado" Padding="100" Clicked="AddImg_Clicked" Aspect="AspectFill" HeightRequest="200" WidthRequest="500" BackgroundColor="Transparent" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="Center"/>

                    <StackLayout Orientation="Horizontal" BackgroundColor="Transparent" Padding="5" HorizontalOptions="FillAndExpand" AbsoluteLayout.LayoutBounds="0,0,1,1" MinimumHeightRequest="20" VerticalOptions="Start" AbsoluteLayout.LayoutFlags="All" x:Name="BgContainer">
                        <ImageButton Grid.Column="0" Grid.Row="0" HorizontalOptions="Start" Source="IconBackW.png" x:Name="btnVolver" Clicked="btnVolver_Clicked"  CornerRadius="50" BackgroundColor="#75deff" WidthRequest="40" HeightRequest="40" Padding="4" />
                    </StackLayout>
                </AbsoluteLayout>

                <Grid x:Name="GridContainer" IsVisible="false">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"  />
                        <RowDefinition Height="160" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    

                    <AbsoluteLayout HeightRequest="150" WidthRequest="200" HorizontalOptions="Center" Margin="10" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                        <Label Text="Sin Imagen" x:Name="txtSinImagen" FontSize="18" IsVisible="False" FontAttributes="Bold" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                        <ImageButton x:Name="AddImg" Clicked="AddImg_Clicked" Source="AddImage.png" WidthRequest="50" Padding="5" BackgroundColor="#eee" CornerRadius="50" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="End" VerticalOptions="End" Margin="10"/>
                    </AbsoluteLayout>
                </Grid>

            </StackLayout>

